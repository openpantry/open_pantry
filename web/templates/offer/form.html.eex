<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :description, class: "control-label" %>
    <%= text_input f, :description, class: "form-control" %>
    <%= error_tag f, :description %>
  </div>

  <div class="form-group">
    <%= label f, :max_per_person, class: "control-label" %>
    <%= number_input f, :max_per_person, class: "form-control" %>
    <%= error_tag f, :max_per_person %>
  </div>

  <div class="form-group">
    <%= label f, :max_per_package, class: "control-label" %>
    <%= number_input f, :max_per_package, class: "form-control" %>
    <%= error_tag f, :max_per_package %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
